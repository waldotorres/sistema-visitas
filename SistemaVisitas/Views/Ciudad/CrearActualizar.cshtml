@model SistemaVisitas.DTO.CiudadCreacionDTO;
@{
	string accion = Model.Id > 0 ? "Actualizar" : "Crear";

	ViewData["title"] = $"{accion} Ciudad";
}

<h1> @accion Ciudad </h1>

<div class="mb-3">
	<form asp-action="CrearActualizar">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		@if( Model.Id >0)
		{
			<input type="hidden" asp-for="Id" />
		}
		<div class="mb-3">
			<label asp-for="Nombre"></label>
			<input asp-for="Nombre" class="form-control" placeholder="Ingrese la ciudad" autocomplete="off"/>
			<span asp-validation-for="Nombre" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="IdRegion"></label>
			<select asp-for="IdRegion" class="form-select" asp-items="@Model.ListaRegiones"></select>
			<span asp-validation-for="IdRegion" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">@accion</button>
		 
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>

	</form>

</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial"></partial>
}
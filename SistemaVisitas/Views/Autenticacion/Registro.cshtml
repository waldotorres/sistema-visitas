@model SistemaVisitas.DTO.RegistroViewModel;
@{
	ViewData["title"] = "Registro";
}

<h1>Regístrate</h1>
<div class="card">
	<div class="card-body">
		<form asp-action="Registro">
			<div asp-validation-summary="ModelOnly" class="text-danger">

			</div>
			<div class="mb-3">
				<label class="form-label" asp-for="Email"></label>
				<input class="form-control" autocomplete="off" placeholder="Ingresa tu email" asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label class="form-label" asp-for="Password"></label>
				<input class="form-control" asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<button class="btn btn-success">Registrarme</button>
				<a asp-action="Login" class="btn btn-primary">Login</a>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial"></partial>
}
